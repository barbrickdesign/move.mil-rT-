#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'
# rubocop:disable Style/MixinUsage
include FileUtils
# rubocop:enable Style/MixinUsage

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('..', __dir__)

def show_help
  puts <<~HELP
    Usage: bin/update [OPTIONS]

    This script updates your development environment:
    - Updates Ruby dependencies (gems)
    - Runs database migrations
    - Clears logs and temporary files

    Options:
      -h, --help     Show this help message

    For more information, see CONTRIBUTING.md
  HELP
  exit 0
end

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

show_help if ARGV.include?('-h') || ARGV.include?('--help')

chdir APP_ROOT do
  # This script is a way to update your development environment automatically.
  # Add necessary update steps to this file.

  puts '== Installing dependencies =='
  system! 'gem install bundler --conservative'
  system('bundle check') || system!('bundle install')

  puts "\n== Updating database =="
  system! 'bin/rails db:migrate'

  puts "\n== Removing old logs and tempfiles =="
  system! 'bin/rails log:clear tmp:clear'

  # puts "\n== Restarting application server =="
  # system! 'bin/rails restart'

  puts "\n== Update complete! =="
  puts "Restart the server if it's currently running."
end
