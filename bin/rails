#!/usr/bin/env ruby

# Show help if requested
if ARGV.include?('-h') || ARGV.include?('--help')
  puts <<~HELP
    Usage: bin/rails COMMAND [ARGS]

    This script runs Rails commands for the application.

    Common commands:
      bin/rails server           Start the Rails server
      bin/rails console          Start the Rails console
      bin/rails db:migrate       Run database migrations
      bin/rails db:seed          Load seed data
      bin/rails routes           Show all routes
      bin/rails test             Run tests
      bin/rails --help           Show all Rails commands

    For more information, see: https://guides.rubyonrails.org/command_line.html
  HELP
  exit 0
end

APP_PATH = File.expand_path('../config/application', __dir__)
require_relative '../config/boot'
require 'rails/commands'
